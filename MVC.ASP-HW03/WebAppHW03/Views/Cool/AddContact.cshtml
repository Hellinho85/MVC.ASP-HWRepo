@model Contact
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddContact</title>
</head>
<body>
    <h2><u><b>Hellinho's mighty add new contacts :P</b></u></h2>
    <br />
    @* AddContact View. Adds new contacts to the User list. Uses a form method ="post".
        Also can include any new contact the user adds.*@
    <form method="post">
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" style="color: blue;"></span>
        </div>

        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" style="color: blue;"></span>
        </div>

        <div>
            <label asp-for="IsCloseFriend"></label>
            <input asp-for="IsCloseFriend" />
            <span asp-validation-for="IsCloseFriend" style="color: blue;"></span>
        </div>

        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" style="color: blue;"></span>
        </div>

        <div>
            <input type="submit" value="Add" />
        </div>
    </form>

</body>
</html>
